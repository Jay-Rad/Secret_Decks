<Window x:Class="Secret_Decks.Windows.Minimized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Secret_Decks.Windows"
        mc:Ignorable="d"
        Title="Secret Decks" Height="50" Width="50"  Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">
    <Border Background="#BF000000" CornerRadius="50" BorderBrush="Gray" BorderThickness="1" >
        <Grid>
            <Button x:Name="buttonRestore" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Click="buttonRestore_Click" Style="{DynamicResource TransparentButtonStyle}" ToolTip="Add Character">
                <Border CornerRadius="3" Height="20"  Width="20" Background="DimGray">
                    <Rectangle Height="10" Width="10" Stroke="White"></Rectangle>
                </Border>
            </Button>
        </Grid>
    </Border>
</Window>