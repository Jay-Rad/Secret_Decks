<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Secret_Decks.Controls"
             xmlns:ToggleSwitch="clr-namespace:ToggleSwitch;assembly=ToggleSwitch" x:Class="Secret_Decks.Controls.ListItemToggle"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch">
    <Grid>
        <TextBlock x:Name="textItemName" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"/>
        <ToggleSwitch:ToggleSwitch x:Name="toggleSwitch" HorizontalAlignment="Right" VerticalAlignment="Center"></ToggleSwitch:ToggleSwitch>
    </Grid>
</UserControl>
